/* pages/Tabbr/index/index.wxss */ /**index.wxss**/
@import "../../../app.wxss";

.index_container {
  display: flex;
  justify-content: flex-start;
  flex-direction: column;
  overflow-y: scroll;
}

.index_top {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.index_top_l {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  padding-right: 20rpx;
  border-right: 1px solid #f2f2f2;
}

.index_top_info {
  margin-left: 8rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  font-size: 34rpx;
  font-weight: 700;
  color: #292929;
  overflow: hidden;
}

.index_top_info .info {
  font-size: 26rpx;
  font-weight: 500;
  color: #747474;
}

.index_top_l .name {
  width: 100rpx;
  height: 100rpx;

  font-size: 24rpx;
  font-weight: 600;
  color: #fff;
  border-radius: 10rpx;
  line-height: 100rpx;
  background: linear-gradient(to right, #00ecad, #00b69b);
}

.index_top_r {
  height: 100rpx;
  width: 260rpx;
  text-align: center;
}

.index_top_r .fensi,
.index_top_r .mai {
  height: 100rpx;
  margin-top: 40rpx;
  display: flex;
  justify-content: flex-start;
  flex-direction: column;
}

.index_top_r .fensi .t1 {
  color: #00c6c7;
  font-size: 30rpx;
  font-weight: 700;
}

.index_top_r .fensi .t2 {
  font-size: 24rpx;
  font-weight: 500;
  color: #747474;
}

.index_top_r .mai .t1 {
  color: #ff5300;
  font-size: 30rpx;
  font-weight: 700;
}

.index_top_r .mai .t2 {
  font-size: 24rpx;
  font-weight: 500;
  color: #747474;
}

.index_table {
  padding: 2rpx;
}

.name {
  margin-top: 8rpx;
  font-size: 26rpx;
  color: "#5f5f5f";
}

.van-icon__image {
  border-radius: 20rpx;
}

.banner {
  padding: 20rpx;
  background: #fff;
}

.banner image {
  width: 100%;
  height: 300rpx;
  border-radius: 10rpx;
}

.productList {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  width: 100%;
  padding: 20rpx 0;
}

.productList .product {
  background-color: #fff;
  margin: 20rpx 0 0;
}

.slot_bottom .show {
  display: block;
}

.slot_bottom .showFalse {
  display: none;
}
