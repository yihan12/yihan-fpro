/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

page {
  background-color: #f5f5f5;
  width: 100%;
  height: 100%;
}

.flex_row_fs {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
}

.flex_row_c {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.flex_row_sb {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.flex_row_sb_l {
  font-size: 16px;
  font-weight: 700;
}

.flex_row_sb_r {
  font-size: 12px;
  font-weight: 500;
  align-items: center;
}

.flex_row_sa {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
}

.flex_column {
  display: flex;
  position: relative;
  justify-content: flex-start;
  flex-direction: column;
}

.flex_column_sb {
  display: flex;
  position: relative;
  justify-content: space-between;
  flex-direction: column;
}

.flex_column_fs {
  display: flex;
  position: relative;
  justify-content: flex-start;
  flex-direction: column;
}

.content_main {
  width: 96%;
  margin: 20rpx auto;
  padding: 20rpx 30rpx;
  border-radius: 10rpx;
  box-sizing: border-box;
  background: #fff;
}

.flex_row_fe {
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
}

/**
清除浮动
*/
.clearfix:after {
  content: ".";
  display: block;
  height: 0;
  clear: both;
  visibility: hidden;
}
